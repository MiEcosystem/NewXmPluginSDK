<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@drawable/progressbar_indeterminate_bg_light" />
    <item>
        <rotate
            android:fromDegrees="0"
            android:interpolator="@android:anim/linear_interpolator"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="360">
            <bitmap
                android:antialias="true"
                android:filter="true"
                android:src="@drawable/progressbar_indeterminate_circle_light" />
        </rotate>
    </item>

</layer-list>